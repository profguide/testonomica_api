{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es5",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "react",
  },
  "exclude": [
    "node_modules",
    "public_html",
//    "tests",
//    "**/*.test.ts"
  ]
}